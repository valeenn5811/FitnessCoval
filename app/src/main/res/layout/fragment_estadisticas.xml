<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_estadisticas_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="Estadísticas"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sección de Consumo de Calorías -->
            <TextView
                android:id="@+id/text_consumo_calorias_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Consumo Total de Calorías"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_consumo_calorias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Sección de Distribución de Macronutrientes -->
            <TextView
                android:id="@+id/text_distribucion_macronutrientes_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distribución de Macronutrientes"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_distribucion_macronutrientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Sección de Actividad Física -->
            <TextView
                android:id="@+id/text_actividad_fisica_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plan Activo"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_actividad_fisica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Sección de Tus Datos -->
            <TextView
                android:id="@+id/text_tus_datos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tus Datos"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvNombreLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre:"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/dark_gray" />

                <TextView
                    android:id="@+id/tvApellidosLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apellidos:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/tvApellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/dark_gray" />

                <TextView
                    android:id="@+id/tvFechaNacimientoLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Nacimiento:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/tvFechaNacimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/dark_gray" />

                <TextView
                    android:id="@+id/tvAlturaLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Altura:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/tvAltura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/dark_gray" />

                <TextView
                    android:id="@+id/tvPesoLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Peso:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/tvPeso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/dark_gray" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
